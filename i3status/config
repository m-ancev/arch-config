# i3status configuration file.

general {
        colors = false
        interval = 1
}

order += "cpu_usage"
#order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
        format = "CPU: %usage"
}

wireless _first_ {
        format_up = "W:%quality"
#%essid, %bitrate, %frequency
        format_down = "W: DOWN"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %speed"
        format_down = ""
} 

battery all {
        format = "BAT: %percentage "
#%remaining, %status
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

#disk "/" {
#        format = "DISK: %avail"
#} 
